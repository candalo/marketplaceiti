<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/topView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#C1C1C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/decrement"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/decrement"
        app:layout_constraintBottom_toBottomOf="@+id/productsNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/productsNumber"
        app:layout_constraintTop_toTopOf="@+id/productsNumber" />

    <TextView
        android:id="@+id/productsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#666666"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView"
        tools:text="1" />

    <ImageButton
        android:id="@+id/increment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/increment"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/productsNumber"
        app:layout_constraintStart_toEndOf="@+id/productsNumber"
        app:layout_constraintTop_toTopOf="@+id/productsNumber" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#C1C1C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productsNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>